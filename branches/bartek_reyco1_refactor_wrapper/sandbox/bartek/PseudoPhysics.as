package bartek{	import org.papervision3d.objects.primitives.Sphere;		import org.papervision3d.objects.primitives.Plane;		import org.papervision3d.cameras.CameraType;	import org.papervision3d.materials.WireframeMaterial;	import org.papervision3d.materials.utils.MaterialsList;	import org.papervision3d.objects.primitives.Cube;	import org.papervision3d.view.BasicView;		import flash.display.StageAlign;	import flash.display.StageQuality;	import flash.display.StageScaleMode;		/**	 * @author bartekd	 */	public class PseudoPhysics extends BasicView {		private var cube:Cube;		private var plane:Plane;		private var cube2:Cube;		private var sphere:Sphere;		public function PseudoPhysics() {			stage.quality = StageQuality.LOW;			stage.scaleMode = StageScaleMode.NO_SCALE;			stage.align = StageAlign.TOP_LEFT;			stage.showDefaultContextMenu = false;			stage.stageFocusRect = false;			super(800, 600, true, false, CameraType.TARGET);						camera.x = -1000;						// Create an instance of the physics for the 3d engine used			physics = new Physics(new LibraryPapervision3D());						var mb:MaterialsList = new MaterialsList();			mb.addMaterial(new WireframeMaterial(),"all");			cube = new Cube(mb, 150, 150, 150, 1, 1, 1);			scene.addChild(cube);			physics.addBody(cube);			cube.y = 400; // Can we "listen" to transformations applied to Do3d's to update the physics?					cube2 = new Cube(mb, 150, 150, 150, 1, 1, 1);			scene.addChild(cube2);			physics.addBody(cube2);			cube.rotationY = 90;						sphere = new Sphere(new WireframeMaterial(), 75);			scene.addChild(sphere);			physics.addBody(sphere);						plane = new Plane(new WireframeMaterial(), 1800, 1800);			scene.addChild(plane);			physics.addBody(plane);						physics.startSimulation();			startRendering();		}	}}